page{
  background: #f9f9f9;
}
.warp{
  width: 100%;
  margin-top: 20rpx;
  
}
.activate{
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  margin-top: 1rpx;
  padding-left: 30rpx;
}

.activate .ipt{
  width: 190rpx;
