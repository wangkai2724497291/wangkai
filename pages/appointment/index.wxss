/* 联系方式 */
.addr {
  position: relative;
  display: flex;
  align-items: center;
  padding: 30rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.addr:first-of-type {
  margin-top: 21rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.addr > image {
  display: inline-block;
  width: 38rpx;
  height: 48rpx;
  margin-right: 30rpx;
}

.addr > .tip,
.addr > .info {
  display: inline-block;
}
.addr > .info view {
  font-size: 23rpx;
  color: #a6a6a6;
}

.icon {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
}

/* 数量
时间
优惠券 */
.count,
.date,
.time,
.coupon {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 116rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.left_side,
.right_side {
  display: flex;
  align-items: center;
}

.left_side text {
  margin-left: 20rpx;
}
.right_side text {
  margin-right: 20rpx;
}

/* 留言框 */
textarea {
  box-sizing: border-box;
  width: 750rpx;
  height: 250rpx;
  padding: 30rpx;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}

