/* pages/orders/index.wxss */
.tab_container {
  font-size: 26rpx;
}

.order {
  display: block;
  padding: 34rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f4f4f4;
}

.title_status {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title_status .title {
  font-size: 36rpx;
  font-weight: 600;
}

.title_status .status {
  color: #00c482
}

.title_status .offered {
  color: #000;
}

.time,
.address {
  display: block;
  padding: 10rpx 0 0;
  color: #7f7f7f;
}

.price_action {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.price_action button {
  width: 130rpx;
  height: 60rpx;
  margin: 0;
  padding: 0;
  font-size: 24rpx;
  line-height: 60rpx;
  color: #fff;
  background-color: #ff9585;
}

.price_action .price {
  font-size: 34rpx;
  color: #fa5741;
}