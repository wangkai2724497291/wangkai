/* pages/placeorder/placeorder.wxss */
.contentservice{
		width: 95%;
		height: auto;
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: flex-start;
    background: #fff;
    padding: 20rpx 10rpx;
	}
  .services{
		width: auto;
		height: 50rpx;
		border: 1rpx solid #E6E6E6;
		border-radius: 8rpx;
		font-size: 24rpx;
		color: #5B5B5B;
		font-weight: normal;
		display: flex;
		justify-content: center;
		align-items: center;
		margin-left: 20rpx;
    margin-top: 15rpx;
		padding: 0 16rpx;
	}
   .active{
    background: #0FBF97;
    color: #fff
  }
  .servicedemo{
		color: #000000;
		font-size: 28rpx;
		font-weight: bold;
    padding: 20rpx;
	}
.service_site{
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 200rpx;
}
/* page{
  overflow: hidden;
} */
.bottom_v{
  width:100%;
  height:200rpx;
  background:red;
}
.service_site .cash{
  font-size: 28rpx;
  color: #101010;
  margin-left: 40rpx;
}
.usable{
  font-size: 28rpx;
  margin-right: 10rpx;
}
.service_site view image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.card_s{
  font-size: 28rpx;
}
.amount{
		width: 100%;
		height: 350rpx;
		background: #fff;
		margin-bottom: 20rpx;
	}
  .withdrawal{
		color: #101010;
		font-size: 28rpx;
		margin-left: 40rpx;
		padding-top: 20rpx;
	}
  .discount{
    font-size: 28rpx;
  }
  .inp{
		width: 600rpx;
		height: 100rpx;
		margin-left: 40rpx;
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: center;
		border-bottom: 1rpx solid #F5F5F5;
		margin-top: 40rpx;
	}
  .inp view input{
		width: 480rpx;
		height: 70rpx;
		margin-left: 20rpx;
		border: none;
		outline: none;
		font-size: 50rpx;
	}
  .ren{
		font-size: 50rpx;
		color: #000000;
	}
  .difference{
		display: flex;
		flex-direction: column;
		margin-top: 30rrpx;
		font-size: 24rpx;
    margin-left: 40rpx;
    color: #A2A2A2;
    padding-top:15px;
	}
  .difference view:nth-of-type(1){
    margin-bottom: 10rpx;
  }
  .coupon{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 20rpx;
  }
 .available{
   color:#FF9500;
   margin-right: 40rpx;
   font-size: 36rpx;
   display: flex;
   flex-direction: row;
  }
  .icon_v{
    margin-left: 15rpx;
  }
  .icon_s{
    margin-right: 10rpx;
  }
  .right_btn image{
    margin-top: 7rpx;
  }
  .nameinput{
    font-size: 50rpx;
  }
  .btn_bottom{
    width: 100%;
    height: 100rpx;
    background: #fff;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
  .figure{
    display: flex;
    flex-direction: row;
    margin-left: 40rpx;
  }
  .figure view:nth-of-type(1){
    font-size: 32rpx;
    color: #FF9500;
    margin-top: 7rpx;
  }
  .figure view:nth-of-type(2){
    font-size: 40rpx;
    color: #FF9500;
    margin-left: 10rpx;
  }
  .submit_btn button{
    width: 200rpx;
    height: 60rpx;
    border: none;
    outline: none;
    color: #fff;
    background: #FF9500;
    font-size: 28rpx;
    line-height: 60rpx;
    border-radius: 60rpx;
    margin-right: 30rpx;
  }




  .contact {
  display: block;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.contact_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx;
  margin-bottom:20rpx;

}

.contact_item .info > text {
  display: block;
}

.contact_item .info .addr {
  display: flex;
  align-items: center;
  font-size: 23rpx;
  color: #a6a6a6;
}
.img_is image{
  width: 40rpx;
  height: 40rpx;
}

.site{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}