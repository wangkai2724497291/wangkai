/* pages/shopCart/index.wxss */
.order {
  margin-bottom: 24rpx;
  background-color: #fff;
}

.c_title {
  position: relative;
  padding: 28rpx 0 28rpx 100rpx;
  font-size: 33rpx;
  font-weight: bold;
}

.c_title > checkbox {
  position: absolute;
  left: 30rpx;
  top: 25rpx;
}

.product {
  position: relative;
  padding-top: 20rpx;
}

.product::before {
  position: absolute;
  top: 0;
  right: 0;
  display: block;
  width: 651rpx;
  height: 1rpx;
  background-color: #F4F4F4;
  content: '';
}

.prod_name {
  padding-left: 30rpx;
  font-size: 28rpx;
}

.prod_name > checkbox {
  margin-right: 12rpx;
}

.prod_name > navigator {
  display: inline-block;
  margin-left: 30rpx;
  color: #31A9E1;
}

.sku {
  position: relative;
  padding: 20rpx 0 20rpx 120rpx;
  font-size: 31rpx;
}

.sku .price_n_count {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 33rpx;
}

.sku .price_n_count .price {
  color: #FF4949;
}

.sku > checkbox {
  position: absolute;
  top: 50%;
  left: 50rpx;
  transform: translateY(-50%);
}

.sku .sku_title {
  display: flex;
  align-items: center;
  padding-right: 30rpx;
  margin-bottom: 15rpx;
}

.sku .sku_title .title {
  flex: 1;
  padding-right: 20rpx;
}

.sku .sku_title .delete {
  color: #FF725C;
}

