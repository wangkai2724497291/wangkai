/* pages/simAppointment/index.wxss */
.head {
  padding-top: 30rpx;
  padding-left: 30rpx;
  font-size: 35rpx;
  color: #464d5d;
  font-weight: 700;
}

/* 联系方式 */
.contact {
  display: block;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.contact_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx;
}
.contact_item .info > text {
  display: block;
}
.contact_item .info .addr {
  display: flex;
  align-items: center;
  font-size: 23rpx;
  color: #a6a6a6;
}

/* 时间 */
.date,
.time {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 116rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.left_side,
.right_side {
  display: flex;
  align-items: center;
}

.left_side text {
  margin-left: 20rpx;
}
.right_side text {
  margin-right: 20rpx;
}

/* 留言框 */
textarea {
  box-sizing: border-box;
  width: 750rpx;
  height: 250rpx;
  padding: 30rpx;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}

/* 上传图片 */
.product_uploader .weui-uploader__input-box,
.product_uploader .weui-uploader__img {
  width: 155rpx;
  height: 155rpx;
}
.product_uploader .weui-uploader__file {
  position: relative;
}
.product_uploader .weui-uploader__title {
  font-size: 30rpx;
}

.product_uploader .weui-uploader__file .delete {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
}

/* 协议 */
.agreement {
  padding: 30rpx;
  font-size: 25rpx;
  color: #c1c5c6;
}

.agreement navigator {
  display: inline-block;
  color: #00c482;
}

/* 提交按钮 */
.submit {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 118rpx;
  font-size: 30rpx;
  line-height: 118rpx;
  color: #fff;
  background-color: #00c482;
  border-radius: 0;
}